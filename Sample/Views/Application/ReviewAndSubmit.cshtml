@model Sample.Models.AccountApplication
@{
    ViewData["Title"] = "Review & Submit";
}

<div class="container mt-4">
    <h2>Step 5: Review & Submit</h2>

    <table class="table table-bordered mt-3">
        <tr><th>Full Name</th><td>@($"{Model.FirstName} {Model.LastName}")</td></tr>
        <tr><th>Email</th><td>@Model.Email</td></tr>
        <tr><th>Phone</th><td>@Model.Phone</td></tr>
        <tr><th>Address</th><td>@Model.Address</td></tr>
        <tr><th>Account Type</th><td>@Model.AccountType</td></tr>
        
    </table>

    <form asp-action="SubmitApplication" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Submit Application</button>
    </form>
</div>
